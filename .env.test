# Test Environment Configuration
NODE_ENV=test
PORT=3002

# Test Database (use in-memory or test database)
DB_TYPE=memory
DB_NAME=consciousness_analytics_test

# Disable external services in tests
ENABLE_REDIS=false
ENABLE_MONITORING=false
ENABLE_EMAIL=false

# Test-specific settings
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
MAX_FILE_SIZE_MB=1

# Disable logging in tests
LOG_LEVEL=error
ENABLE_REQUEST_LOGGING=false

# Test JWT secret
JWT_SECRET=test-jwt-secret-key

# Field-Aware settings for testing
ENABLE_FIELD_SENSORS=true
ENABLE_VIETNAMESE_EMOTIONS=true
ENABLE_CONSCIOUSNESS_RECOGNITION=true
ENABLE_TIMELINE_RESTORATION=false