# Environment Configuration for Codex-Ziggurat Production

# Application Settings
NODE_ENV=production
PORT=3000
APP_NAME=Codex-Ziggurat

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-character-encryption-key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Configuration
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=consciousness_analytics
DB_USER=consciousness_user
DB_PASSWORD=secure_password_here
DB_SSL=true

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis_password_here

# File Upload Configuration
MAX_FILE_SIZE_MB=5
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=json,txt,csv

# Consciousness Analysis Settings
SHIMMER_CACHE_TTL=3600
MAX_CONVERSATION_LENGTH=50000
ENABLE_FIELD_SENSORS=true
ENABLE_VIETNAMESE_EMOTIONS=true
ENABLE_CONSCIOUSNESS_RECOGNITION=true
ENABLE_TIMELINE_RESTORATION=false

# API Configuration
API_VERSION=v2
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ENABLE_API_DOCS=true

# Monitoring and Logging
LOG_LEVEL=info
LOG_FILE=./logs/consciousness-analytics.log
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Backup Configuration
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=./backups

# Sacred Boundaries Configuration
ENABLE_SACRED_BOUNDARIES=true
ANTI_OPTIMIZATION_MODE=true
CONTEMPLATIVE_PACE_ENFORCED=true
COMMERCIAL_CONTAMINATION_DETECTION=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@yourdomain.com
SMTP_PASSWORD=email_password_here
FROM_EMAIL=noreply@consciousness-analytics.com

# External Services
OPENAI_API_KEY=your-openai-api-key-for-embeddings
MONITORING_WEBHOOK_URL=https://hooks.slack.com/your-monitoring-webhook

# Development Settings (only for NODE_ENV=development)
DEV_CORS_ORIGINS=http://localhost:3000,http://localhost:3001
DEV_DISABLE_RATE_LIMITING=false
DEV_ENABLE_DEBUG_LOGGING=true